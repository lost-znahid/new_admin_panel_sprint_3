{
  "settings": {
    "refresh_interval": "1s",
    "analysis": {
      "filter": {
        "ru_stop": {
          "type": "stop",
          "stopwords": ["и", "в", "во", "не", "что", "он", "на"]
        },
        "en_stop": {
          "type": "stop",
          "stopwords": ["a", "an", "the", "is", "in", "at"]
        }
      },
      "analyzer": {
        "ru_en": {
          "tokenizer": "standard",
          "filter": ["lowercase", "ru_stop", "en_stop"]
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "id": {"type": "keyword"},
      "imdb_rating": {"type": "float"},
      "genre": {"type": "keyword"},
      "genres": {
        "type": "nested",
        "dynamic": "strict",
        "properties": {
          "id": {"type": "keyword"},
          "name": {"type": "text", "analyzer": "ru_en"}
        }
      },
      "title": {
        "type": "text",
        "analyzer": "ru_en",
        "fields": {
          "raw": {"type": "keyword"}
        }
      },
      "description": {"type": "text", "analyzer": "ru_en"},
      "directors": {
        "type": "nested",
        "dynamic": "strict",
        "properties": {
          "id": {"type": "keyword"},
          "name": {"type": "text", "analyzer": "ru_en"}
        }
      },
      "actors": {
        "type": "nested",
        "dynamic": "strict",
        "properties": {
          "id": {"type": "keyword"},
          "name": {"type": "text", "analyzer": "ru_en"}
        }
      },
      "writers": {
        "type": "nested",
        "dynamic": "strict",
        "properties": {
          "id": {"type": "keyword"},
          "name": {"type": "text", "analyzer": "ru_en"}
        }
      },
      "actors_names": {"type": "text", "analyzer": "ru_en"},
      "writers_names": {"type": "text", "analyzer": "ru_en"},
      "directors_names": {"type": "text", "analyzer": "ru_en"}
    }
  }
}
